{
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28
  },
  "configurePresets": [
    {
      "name": "isWindows",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "isLinux",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "config-base",
      "hidden": true,
      "binaryDir": "${sourceDir}/_bld-${presetName}",
      "cacheVariables": {
        "CMAKE_INSTALL_INCLUDEDIR": "include",
        "CMAKE_INSTALL_LIBDIR": "lib",
        "XP_INSTALL_CMAKEDIR": "share/cmake"
      }
    },
    {
      "name": "msvc",
      "displayName": "config MSVC-2019 Windows",
      "inherits": ["config-base", "isWindows"],
      "generator": "Visual Studio 16 2019",
      "architecture": "x64"
    },
    {
      "name": "ninja",
      "displayName": "config Ninja Linux",
      "inherits": ["config-base", "isLinux"],
      "generator": "Ninja Multi-Config"
    }
  ],
  "buildPresets": [
    {
      "name": "isWindows",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "isLinux",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "build-base",
      "hidden": true,
      "jobs": 8
    },
    {
      "name": "msvc-debug",
      "displayName": "build MSVC Debug Windows",
      "inherits": ["build-base", "isWindows"],
      "configurePreset": "msvc",
      "configuration": "Debug"
    },
    {
      "name": "msvc-release",
      "displayName": "build MSVC Release Windows",
      "inherits": ["build-base", "isWindows"],
      "configurePreset": "msvc",
      "configuration": "Release"
    },
    {
      "name": "ninja-debug",
      "displayName": "build Ninja Debug Linux",
      "inherits": ["build-base", "isLinux"],
      "configurePreset": "ninja",
      "configuration": "Debug"
    },
    {
      "name": "ninja-release",
      "displayName": "build Ninja Release Linux",
      "inherits": ["build-base", "isLinux"],
      "configurePreset": "ninja",
      "configuration": "Release"
    }
  ],
  "packagePresets": [
    {
      "name": "isWindows",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "isLinux",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "msvc",
      "displayName": "package MSVC Windows",
      "inherits": "isWindows",
      "configurePreset": "msvc",
      "configurations": ["Debug", "Release"]
    },
    {
      "name": "ninja",
      "displayName": "package Ninja Linux",
      "inherits": "isLinux",
      "configurePreset": "ninja",
      "configurations": ["Debug", "Release"]
    }
  ],
  "workflowPresets": [
    {
      "name": "msvc",
      "displayName": "workflow MSVC Windows",
      "steps": [
        {
          "type": "configure",
          "name": "msvc"
        },
        {
          "type": "build",
          "name": "msvc-debug"
        },
        {
          "type": "build",
          "name": "msvc-release"
        },
        {
          "type": "package",
          "name": "msvc"
        }
      ]
    },
    {
      "name": "ninja",
      "displayName": "workflow Ninja Linux",
      "steps": [
        {
          "type": "configure",
          "name": "ninja"
        },
        {
          "type": "build",
          "name": "ninja-debug"
        },
        {
          "type": "build",
          "name": "ninja-release"
        },
        {
          "type": "package",
          "name": "ninja"
        }
      ]
    }
  ]
}
